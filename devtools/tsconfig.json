{
  // Inherit the project settings.
  "extends": "../tsconfig",

  // Project layout. Changes not recommended.
  "include": ["*.ts", "**/*.ts"],
  "exclude": ["build", "lib"],

  "compilerOptions": {
    // Module and Node interoperability section. Do not change.
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",

    // Generation of .d.ts files. and debugging source maps.
    "declaration": true,
    "declarationMap": true,

    // Speed up compilation. Not important at this scale, buyt it sneaks up on you.
    "incremental": true,
    "tsBuildInfoFile": "./build/.tsbuild-info"
  }
}
